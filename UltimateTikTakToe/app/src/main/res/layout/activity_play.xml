<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.PlayActivity"
    android:padding="15dp"
    android:background="@color/bgColor">

    <android.support.v7.widget.GridLayout
        android:layout_height="330dp"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:columnCount="5"
        app:rowCount="5"
        app:alignmentMode="alignBounds"
        android:layout_gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="50dp">
        <ImageView android:layout_height="0dp"
                   android:layout_width="0dp"
                   app:layout_columnWeight="1"
                   app:layout_rowWeight="1"
            app:layout_columnSpan="5"
            android:src="@drawable/lineh"/>
        <ImageView android:layout_height="0dp"
                   android:layout_width="0dp"
                   app:layout_columnWeight="1"
                   app:layout_rowWeight="1"
            app:layout_columnSpan="5"
            android:src="@drawable/lineh"/>
    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        app:columnCount="5"
        app:rowCount="5"
        app:alignmentMode="alignBounds"
        android:layout_height="330dp"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_rowSpan="3"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/linev"/>


        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_rowSpan="3"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:src="@drawable/linev"/>
    </android.support.v7.widget.GridLayout>


    <!--ACTUAL CELL IMAGES START HERE-->
    <android.support.v7.widget.GridLayout
        android:layout_height="330dp"
        android:layout_width="330dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:columnCount="3"
        app:rowCount="3"
        app:alignmentMode="alignBounds"
        android:layout_gravity="center">
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell0"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell1"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell2"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell3"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell4"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell5"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell6"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell7"
            style="@style/cellImageViewStyle"/>
        <ImageView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:id="@+id/cell8"
            style="@style/cellImageViewStyle"/>
    </android.support.v7.widget.GridLayout>

</FrameLayout>
